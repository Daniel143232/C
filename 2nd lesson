
#include <stdio.h>
#include <math.h>
int main()
{
 float X;
 printf("print a number \n");
 scanf("%f",&X);                                                          //תרגיל 1
 
 if(X>=0)
  {
     printf("the number is positive %f \n" ,X );
  }
  else
         {
         printf("the number is negetive %f \n",X );    
         }

}


#include <stdio.h>
#include <math.h>
int main()
{
 int x;
 printf("print a number \n");
 scanf("%d",&x);

 if(x%2==0)
    {
    printf("the num is being definied by two %d \n",x);                                    //תרגיל 2
    }
 else
    {
    printf("the number is not being defined by two %d \n" ,x);
    
    }
    
}


#include <stdio.h>
#include <math.h>                                                                    //תרגיל 3
int main()
{
 int x,y;
 printf("print the first number \n");
 scanf("%d",&x);
 printf("print the second number \n");
 scanf("%d",&y);
 
 if((x*y)%5==0)    
{
 printf("the answer of %d*%d= %d",x,y ,x*y);   
}   
 else
 {
 printf("error");   
 }
 
}


#include <stdio.h>
#include <math.h>
int main()
{
 int x,y,z;
 printf("print the first number \n");                                   //תרגיל 4
 scanf("%d",&x);
 printf("print the second number \n");
 scanf("%d",&y);
 printf("print the third number \n");
 scanf("%d",&z); 
     
 if((x>0&&x%2==0)&&(y>0&&y%2==0)&&(z>0&&z%2==0))   
    {
    printf("True");
    }
  else 
    {
    printf("False");
    }
}

#include <stdio.h>
#include <math.h>
int main()
{
int x,y,z;
 printf("print the first number \n");
 scanf("%d",&x);
 printf("print the second number \n");
 scanf("%d",&y);
 printf("print the second number \n");
 scanf("%d",&z);
 if(x>y&&x<z)
 {
  printf("the numbers are organized %d=y %d=x %d=z" ,y,x,z);
 }
 else
   if(y>z&&y<x)
    {
    printf("the numbers are organized %d=z %d=y %d=x" ,z,y,x);
    }
 else
   if(z<x&&z>y)
    {
    printf("the numbers are organized %d=y %d=z %d=x" ,y,z,x);
    }   
   else
    if(z>y&&y>x)
    {
    printf("the numbers are organized %d=x %d=y %d=z" ,x,y,z);
        
    }
   else
     if(y>x&&x>z)
    {
    printf("the numbers are organized %d=z %d=x %d=y" ,z,x,y);
    }
    else
      if(y>z&&z>x)
    {
    printf("the numbers are organized %d=x %d=z %d=y" ,x,z,y);
    }
    
    
}
 

#include <stdio.h>
#include <math.h>
int main()
{
