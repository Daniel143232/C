 float sum;
 int TenIce = 10;
 int cardbored=54;
 int hilok;
 int sheherit;
 printf("the amount of Ice Creams the customer took is \n");
 scanf("%d",&amount);
 if(amount < 10)
 {
 sum = iceCream * amount;
 }
 else
   if(amount ==10)
   {
   sum =10;
   }
   else
     if(amount > 10 && amount <54)
     {
   sheherit = amount % 10;
   hilok = (amount /10);
   hilok = hilok *10;
   sum = hilok + sheherit *1.2;
         
     }
     else
     if(amount==54)
     {
     sum = 50;                                                      //שאלה 6
     }
     else
       if(amount > 54 && amount <108)
     {
     sheherit = amount % 10;
      hilok = (amount /10);
      hilok = hilok *10;
      sum = hilok + sheherit *1.2;
     }
else
       if(amount ==108)
{
     sum = 50*2;
}
     else
     {
       if(amount >108)
   printf("error");
}   
     printf("the cash you will pay is %f" ,sum);
}

























 
